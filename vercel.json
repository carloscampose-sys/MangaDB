{
    "framework": null,
    "buildCommand": null,
    "outputDirectory": null,
    "functions": {
        "api/[...path].js": {
            "maxDuration": 30
        }
    },
    "rewrites": [
        { "source": "/manga/:path*", "destination": "/manga-detail.html" },
        { "source": "/reader/:path*", "destination": "/reader.html" }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=3600, stale-while-revalidate"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, OPTIONS"
                }
            ]
        }
    ]
}
