{
    "framework": null,
    "buildCommand": null,
    "outputDirectory": null,
    "functions": {
        "api/[[...path]].js": {
            "maxDuration": 30,
            "includeFiles": "_lib/**"
        }
    },
    "routes": [
        { "src": "/api/search", "dest": "/api/[[...path]]" },
        { "src": "/api/manga/(.*)", "dest": "/api/[[...path]]" },
        { "src": "/api/chapters/(.*)", "dest": "/api/[[...path]]" },
        { "src": "/api/pages/(.*)", "dest": "/api/[[...path]]" },
        { "src": "/api/source/(.*)", "dest": "/api/[[...path]]" }
    ],
    "rewrites": [
        { "source": "/manga/:path*", "destination": "/manga-detail.html" },
        { "source": "/reader/:path*", "destination": "/reader.html" }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "s-maxage=3600, stale-while-revalidate"
                },
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, OPTIONS"
                }
            ]
        }
    ]
}
